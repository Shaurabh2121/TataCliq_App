<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CategoriesFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What are you looking for"
            android:textColor="#6C6666"
            android:textSize="20dp"
            android:paddingStart="50dp"
            android:background="@color/black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            />
      <View
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="15dp"
          android:layout_marginStart="10dp"
          android:background="@drawable/ic_baseline_search_24"/>
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_baseline_keyboard_voice_24"/>
    </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginBottom="15dp"
      android:layout_marginTop="15dp"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:id="@+id/tvWomenFashion"
          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Women's Fashion"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:id="@+id/tvMenFashion"

          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Men's Fashion"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:id="@+id/tvElectronics"

          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Electronics"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:id="@+id/tvMobilePhone"

          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Mobile Phones"/>
      <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/black"
      android:paddingTop="10dp"
          android:id="@+id/tvTvAndAppliances"

          android:paddingBottom="10dp"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
      android:textSize="18dp"
      android:text="tv and Appliances"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:id="@+id/tvKidsFashion"

          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Kid's Fashion"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:id="@+id/tvJewellery"

          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Jewellery"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:id="@+id/tvConnectedHomes"

          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Connected Homes"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:id="@+id/tvHomeFurnishing"

          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Home Furnishings"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Fragrances"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Hair Care and Styling"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/black"
          android:paddingTop="10dp"
          android:paddingBottom="10dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
          android:textSize="18dp"
          android:text="Men's Grooming"/>
  </LinearLayout>


</LinearLayout>