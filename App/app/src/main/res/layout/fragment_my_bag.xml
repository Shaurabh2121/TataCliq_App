<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragment.MyBagFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Bag"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@color/black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"/>
        <View
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/tata_sib"
            android:layout_marginTop="20dp"
            android:layout_marginStart="70dp"/>
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_baseline_keyboard_backspace_24"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bag_red"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Your bag is empty!"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Add some wonderful products from Tata CLiQ"
                android:textSize="20dp"
                android:paddingBottom="15dp"
                android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:text="Continue Shopping"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/btnContinueShopping"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_round"
        android:layout_marginStart="70dp"
        android:layout_height="wrap_content"/>
</LinearLayout>